            <section>
                <listItemLockup documentURL="/templates/FitnessDetail/FitnessDetail.xml">
                    <title>Product template</title>
                    <relatedContent>
                        <lockup>
                            <img srcset="/resources/images/screenshots/product.jpg (layout-direction:ltr), /resources/images/screenshots/product_rtl.jpg (layout-direction:rtl)" width="857" height="482" />
